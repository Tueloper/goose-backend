{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "noEmit": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*"
      ],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
